  
{{#if post.length}}
<section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
        <a href="/dashboard/edit/{{id}}">{{title}}</a>
        <p>{{format_date created_at}}</p>
    {{/each}}
</section>
{{/if}}

<button type="submit" class="btn">
    <a href="/dashboard/new">+ New Post</a>
</button>

<script src="./js/new_post.js"></script>