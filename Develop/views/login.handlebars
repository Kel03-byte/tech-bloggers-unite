<section class="mt-4 mx-4 px-2 rounded border border-dark border-4">

    <h3>Login</h3>

    <form class="my-2 form login-form">

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" id="user-login" placeholder="Enter your username!">
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="text" class="form-control" id="password-login" placeholder="Enter your password!">
        </div>

        <div class="my-2 form-group d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-dark" id="log-in-btn">Log In!</button>
        </div>

        <div class="form-group">
            <a class="text-dark" href='/signup'>Sign up instead!</a>
        </div>

    </form>

</section>

<script src="/js/login.js"></script>