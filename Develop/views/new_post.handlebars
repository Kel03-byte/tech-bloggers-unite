<section class="mt-4 mx-4 px-2 rounded border border-dark border-4">
    
    <h3>Create New Post</h3>

    <form class="form new-post-form">

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input class="form-control" id="post-title" placeholder="Enter a title for your post!">
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea class="form-control" id="post-content" placeholder="Type out your post!" rows="3"></textarea>
        </div>

        <div class="my-2 form-group d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-dark" id="new-btn">Create</button>
        </div>

    </form>

</section>

<script src="/js/new_post.js"></script>